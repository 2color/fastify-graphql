{
  "name": "fastify-graphql-nexus",
  "license": "MIT",
  "scripts": {
    "dev": "ts-node-dev --no-notify --respawn --transpile-only src/index",
    "start": "node dist/index",
    "clean": "rm -rf dist",
    "build": "npm -s run clean && npm -s run generate && tsc",
    "generate": "npm -s run generate:prisma && npm -s run generate:nexus",
    "generate:prisma": "prisma generate",
    "generate:nexus": "ts-node --transpile-only src/schema",
    "db:push": "prisma db push --preview-feature",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "migrate:reset": "prisma migrate reset",
    "test": "jest"
  },
  "dependencies": {
    "@appsignal/apollo-server": "^1.0.11",
    "@appsignal/nodejs": "^1.2.4",
    "@prisma/client": "2.21.2",
    "@sentry/node": "^6.2.5",
    "@sentry/tracing": "^6.2.5",
    "altair-fastify-plugin": "^4.0.0",
    "apollo-server": "^2.24.1",
    "dotenv": "^8.2.0",
    "fastify": "^3.14.2",
    "fastify-plugin": "^3.0.0",
    "graphql": "15.5.0",
    "graphql-scalars": "1.9.3",
    "mercurius": "7.6.1",
    "nexus": "1.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@types/node": "14.14.37",
    "jest": "^26.6.3",
    "prisma": "2.21.2",
    "ts-jest": "^26.5.5",
    "ts-node": "9.1.1",
    "ts-node-dev": "1.1.6",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": "^14.0.0"
  }
}
